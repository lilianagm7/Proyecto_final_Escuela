@model Pruebas.Models.Alumno

@{
    ViewData["Title"] = "Registrar Alumno";
}

<h1>Registrar Alumno</h1>
<h5>Registra a un nuevo alumno</h5>
<hr />

<form asp-action="Create" class="mt-4">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-row">
        <div class="form-group col-md-4">
            <label asp-for="Nif"></label>
            <input asp-for="Nif" class="form-control" />
            <span asp-validation-for="Nif" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="Nombre"></label>
            <input asp-for="Nombre" class="form-control" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="Apellido1"></label>
            <input asp-for="Apellido1" class="form-control" />
            <span asp-validation-for="Apellido1" class="text-danger"></span>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-4">
            <label asp-for="Apellido2"></label>
            <input asp-for="Apellido2" class="form-control" />
            <span asp-validation-for="Apellido2" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="Ciudad"></label>
            <input asp-for="Ciudad" class="form-control" />
            <span asp-validation-for="Ciudad" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="Direccion"></label>
            <input asp-for="Direccion" class="form-control" />
            <span asp-validation-for="Direccion" class="text-danger"></span>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-4">
            <label asp-for="Telefono"></label>
            <input asp-for="Telefono" class="form-control" />
            <span asp-validation-for="Telefono" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="FechaNacimiento"></label>
            <input asp-for="FechaNacimiento" class="form-control" type="date" placeholder="dd/mm/aaaa" />
            <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="Sexo"></label>
            <select asp-for="Sexo" class="form-control">
                <option value="">-- Selecciona --</option>
                <option value="M">Masculino</option>
                <option value="F">Femenino</option>
            </select>
            <span asp-validation-for="Sexo" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group d-flex justify-content-end gap-2">
        <input type="submit" value="Guardar" class="btn btn-success" />
        <a asp-action="Index" class="btn btn-primary">Ir a la lista</a>
        <a asp-controller="Home" asp-action="Index" class="btn btn-dark">Inicio</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
