@model IEnumerable<Pruebas.Models.Asignatura>

@{
    ViewData["Title"] = "Index";
}

<h1>Asignatura</h1>

<div class="d-flex justify-content-between align-items-center mb-3">
    <p class="ms-auto">
        <a asp-action="Create" class="btn btn-primary" style="background-color: #5dade2;">Crear Nuevo</a>
    </p>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Creditos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Curso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cuatrimestre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdGradoNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdProfesorNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Creditos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Curso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cuatrimestre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdGradoNavigation.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdProfesorNavigation.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm" style="background-color: #85c1e9; color: white;">Editar</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm" style="background-color: #2874a6; color: white;">Detalle</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
