@model Pruebas.Models.Grado

@{
    ViewData["Title"] = "Delete";
}

<h1>Borrar Grado</h1>

<h4>¿Estas seguro de borrar el grado?</h4>
<div>
    <h4>Grado</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
